{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",

    "baseUrl": "src/",

    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
